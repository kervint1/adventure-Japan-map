// prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// モデル定義の例（AnimeSpotモデル）
model AnimeSpot {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  rating    Float
  createdAt DateTime @default(now())
}